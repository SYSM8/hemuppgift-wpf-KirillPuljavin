<Page
    x:Class="Yatzy_in_WPF.Pages.MainGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainGame"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    mc:Ignorable="d">

    <Grid Background="Beige">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!--  Dice Roll  -->
        <StackPanel
            Grid.Column="0"
            Margin="20"
            VerticalAlignment="Top">
            <Label
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                Content="Dice Roll"
                FontSize="24"
                FontWeight="Bold"
                Foreground="Black" />
            <!--  Placeholder for dice roll controls and graphics  -->
        </StackPanel>

        <!--  Score Table  -->
        <ScrollViewer
            Grid.Column="1"
            Margin="20"
            VerticalScrollBarVisibility="Auto">
            <Grid Background="Beige" ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <!--  Left Header for Score Actions  -->
                    <ColumnDefinition Width="2*" />
                    <!--  Dynamic Columns for Each Player  -->
                    <ColumnDefinition Width="*" SharedSizeGroup="Player" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <!--  Header Row for Player Names  -->
                    <RowDefinition Height="Auto" />
                    <!--  Rows for Scores  -->
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Score Actions Headers (Left Column)  -->
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="5"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Black"
                    Text="Doubles" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="5"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Black"
                    Text="Three of a Kind" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="5"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Black"
                    Text="Four of a Kind" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="5"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Black"
                    Text="Full House" />
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="5"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Black"
                    Text="Small Straight" />
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="0"
                    Margin="5"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Black"
                    Text="Large Straight" />
                <TextBlock
                    Grid.Row="7"
                    Grid.Column="0"
                    Margin="5"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Black"
                    Text="Yatzy" />
                <TextBlock
                    Grid.Row="8"
                    Grid.Column="0"
                    Margin="5"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Black"
                    Text="Chance" />

                <!--  Player Headers  -->
                <ItemsControl
                    Grid.Row="0"
                    Grid.Column="1"
                    ItemsSource="{Binding Players}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="Black"
                                Text="{Binding Name}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  Player Scores  -->
                <ItemsControl
                    Grid.Row="1"
                    Grid.Column="1"
                    ItemsSource="{Binding Players}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5" Orientation="Vertical">
                                <ItemsControl ItemsSource="{Binding ScoreCard}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Margin="5"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Foreground="Black"
                                                Text="{Binding}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>